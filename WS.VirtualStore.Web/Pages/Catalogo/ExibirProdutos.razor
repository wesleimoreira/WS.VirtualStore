@foreach (var item in Produtos)
{
    <div class="col-md-3 mb-2">
        <a href="/ProdutoDetalhes/@item.ProdutoId">
            <div class="card">
                <img class="img-thumbnail" src="@item.ProdutoImagem">
                <div class="card-body">
                    <p class="mb-4">@item.ProdutoDescricao</p>
                    <h5 class="card-title mb-3">
                        @item.ProdutoPreco.ToString("c")
                    </h5>
                </div>
            </div>
        </a>
    </div>
}

@code {

    [Parameter]
    public required IEnumerable<ProdutoDto> Produtos { get; set; }
}
