@page "/ProdutoDetalhes/{ProdutoId:int}"
@inherits ProdutoDetalhesBase

@if (Produto is null && MensagemErro is null)
{
    <ExibirSpinner></ExibirSpinner>
}
else if(MensagemErro is not null)
{
    <ExibirErro MensagemErro="@MensagemErro"></ExibirErro>
}
else
{
    <h3 class="mb-5">Detalhes do produto</h3>
    <div class="row">
        <div class="col-md-6 mb-4">
            <img class="img-fluid" src="@Produto?.ProdutoImagem" />
        </div>
        <div class="col-md-6">
            <h3>@Produto?.ProdutoNome</h3>
            <p class="mb-4">@Produto?.ProdutoDescricao</p>
            <p class="mb-4">
                <b>@Produto?.ProdutoPreco.ToString("c")&nbsp;(@Produto?.ProdutoQuantidade items em estoque)</b>
            </p>
            <div>
                <button class="btn-success">Incluir no carrinho</button>
            </div>
        </div>
    </div>
}